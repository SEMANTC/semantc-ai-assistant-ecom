# environment
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=INFO

# application
PORT=8080
MAX_WORKERS=4
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# google cloud
PROJECT_ID=your-project-id
REGION=us-central1
DATASET_ID=ecommerce_dataset
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# llm configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
MODEL_NAME=claude-3-sonnet-20240229
MAX_TOKENS=1000
TEMPERATURE=0.7

# bigquery settings
BQ_LOCATION=US
BQ_JOB_TIMEOUT=300
BQ_MAXIMUM_BYTES_BILLED=1000000000

# memory settings
CACHE_TTL=3600
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# schema settings
AVAILABLE_PLATFORMS=shopify,amazon,ebay
DEFAULT_DATASET_PREFIX=ecom_
SCHEMA_REFRESH_INTERVAL=3600

# security
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key